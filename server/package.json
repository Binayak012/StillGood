{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env DATABASE_URL=file:./dev.db tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "test": "cross-env DATABASE_URL=file:./test.db tsx scripts/applyMigrations.ts && cross-env DATABASE_URL=file:./test.db vitest run",
    "prisma:generate": "cross-env DATABASE_URL=file:./dev.db prisma generate",
    "prisma:migrate": "cross-env DATABASE_URL=file:./dev.db tsx scripts/applyMigrations.ts",
    "prisma:seed": "cross-env DATABASE_URL=file:./dev.db tsx scripts/applyMigrations.ts && cross-env DATABASE_URL=file:./dev.db tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.4.1",
    "@prisma/client": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "prisma": "^7.0.0",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
